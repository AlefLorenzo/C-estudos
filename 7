// Online C compiler to run C program online
#include <stdio.h>

void limparBuffer() {
    int c;
    while ((c = getchar()) != '\n' && c != EOF);
}


int main() {
   float salario_atual, aumento;
   
  
   
   printf("Digite o seu salario: ");
   scanf("%f",&salario_atual);
   limparBuffer();
   aumento = 0;
   
   if(salario_atual == 1000){
       aumento += salario_atual * 0.20; 
       printf("voce recebe 20%% de aumento $: %.2f\n", aumento);
   }
 
   if(salario_atual >= 1000 && salario_atual <= 3000){
       aumento += salario_atual * 0.15; 
       printf("voce recebe um aumento de 15%% $:%.2f\n" , aumento);
   }
   
    if(salario_atual > 3000 && salario_atual <= 8000){
       aumento += salario_atual * 0.10; 
       printf("voce recebe um aumento de 10%% $:%.2f\n" , aumento);
   }
   
    if(salario_atual >= 8000){
       aumento += salario_atual * 0.05; 
       printf("voce recebe um aumento de 5%% $:%.2f\n",aumento);
   }

 
    return 0;
}
