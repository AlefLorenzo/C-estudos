#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#include<math.h>

int main(){
    double delta, X1, X2;
    double a , b , c;
    
    
    printf("digite os coeficientes (A,B,C): ");
    scanf("%lf %lf %lf",&a, &b, &c);
    
    if(a == 0){
         printf("A equacao nao possui raizes real!");
         return 1;
    }
    delta = b * b - 4 * a * c;
    
    if(delta < 0 ){
        printf("A equacao nao possui raizes real X = %.2f\n");
    }
      else if(delta == 0){
        X1 = -b / (2 * a ); 
        printf("A equeção possui uma raiz\n");
    } else{
        X1 = (- b + sqrt(delta)) / (2 * a);
        X2 = (- b - sqrt(delta)) / (2 * a);
       
    }
    
    printf("x1 =  %.4lf\n", X1);
    printf("x2 =  %.4lf\n", X2);
    return 0;
}
